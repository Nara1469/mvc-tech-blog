<div class="row mt-4">
  <h3>{{user.username}}: Create a New Post</h3>
  <div class="col-md-12">
    <form class="form new-post-form">
      <div class="form-group">
        <label for="post-title">Title:</label>
        <input class="form-input" type="text" id="post-title" name="post-title" />
      </div>
      <div class="form-group">
        <label for="post-content">Context:</label>
        <textarea class="form-input" id="post-content" name="post-content"></textarea>
      </div>
      <div class="form-group">
        <button type="submit" class="btn btn-primary add-post">CREATE</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/create.js"></script>