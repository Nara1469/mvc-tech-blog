<div class="row mt-4">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header back-color">
        <label for="post-title">{{username}} : Create a New Post</label>
      </div>
      <div class="card-body">
        <label for="post-title">Title:</label>
        <textarea id="post-title" name="post-title" rows="1"></textarea>
        <label for="post-content">Content:</label>
        <textarea id="post-content" name="post-content" rows="3"></textarea>
      </div>
      <button class="btn btn-primary" id="add-post">CREATE</button>
    </div>
  </div>
</div>
