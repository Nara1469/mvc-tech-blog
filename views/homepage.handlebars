<!-- Loop over each object in the posts array -->
{{#each posts as |post| }}
<div class="row mb-4 post">
  <div class="col-md-12">
    <div class="card add-space">
      <div class="card-header back-color">
        <h4 data-id="{{post.id}}>{{{get_emoji}}}<a href="/post/{{post.id}}">{{post.title}}</a></h4>
        <p class="text-right">Posted by {{post.user.username}} on {{format_date post.date_created}}</p>
      </div>
      <div class="card-body">
        <p class="card-text">{{post.content}}</p>
      </div>
    </div>
  </div>
</div>
{{/each}}