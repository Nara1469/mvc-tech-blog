{{#if posts.length}}
<div class="post-list">
  <h3 class="add-space">{{post.user.username}}'s Posts:</h3>

  {{#each posts as |post| }}
  <div class="row mb-4 post">
    <div class="col-md-12">
      <div class="card add-space">
        <div class="card-body">
          <h4 class="card-title">{{{get_emoji}}}<a href="/post/{{post.id}}">{{post.title}}</a></h4>
          <h3 class="card-title text-right">
            <p>Posted on {{format_date post.date_created}}</p>
          </h3>
        </div>
        <p class="card-text">{{post.content}}</p>
      </div>
      <div class="col-md-4">
        <button class="btn btn-sm btn-danger" data-id="{{post.id}}">DELETE</button>
      </div>
    </div>
  </div>
  {{/each}}

</div>
{{/if}}

<script src="./js/dashboard.js"></script>

