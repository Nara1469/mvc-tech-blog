<h3 class="add-space">{{username}}'s Current Post</h3>
<div class="row mt-4">
  <div class="col-md-12">
    <div class="card">
      <div class="card-header back-color">
        <label for="post-title">Title:</label>
      </div>
      <div class="card-body">
        <textarea id="post-title" name="post-title" style="width: 100%; height: 100%; padding: 10px;" rows="1">{{post.title}}</textarea>
      </div>
      <div class="card-header back-color">
        <label for="post-content">Content:</label>
      </div>
      <div class="card-body">
        <textarea id="post-content" name="post-content" style="width: 100%; height: 100%; padding: 10px;" rows="3">{{post.content}}</textarea>
      </div>
      <button class="btn btn-primary" id="update-post" data-id="{{post.id}}">SUBMIT</button>
    </div>
  </div>
</div>